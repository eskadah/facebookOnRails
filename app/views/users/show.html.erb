<div class="container">
  <div class="row">
    <div class ='col-lg-6'>

      <div class  = media style="margin-top:20px">
        <%= image_tag(current_user.get_profile_picture, class: 'pull-left') %>
        <div class = 'media-body'>
          <h4 class = 'media-heading'><%= current_user.name %></h4>
            <%= current_user.get_location %>
        </div>
      </div>
    </div>

  </div>
  <div class="col-lg-6 pull-right" >
    <% @posts.each do |post| %>
        <div class ='post well clearfix' >
          <h5> <%= post.title %></h5>
          <p class = 'lead'> <%=  post.content %></p>
          <span class="pull-right label label-default">posted <%= time_ago_in_words(post.created_at) %> ago</span>
          <% if post.user == current_user %>
              <span class = 'pull-left '><%= link_to 'edit', edit_post_path(post) %>| <%= link_to('destroy', post, method:'delete',data:{confirm:'are you sure you want to delete this post'}) %></span>
          <%end %>
        </div>



    <% end %>
  </div>


</div>
